    <title>Manuscript Page</title>
    <link href="/util.css" rel="stylesheet"/>
    <script src="/htmx.min.js"></script>

    <style>
        .layout {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1rem;
        }
        .sidebar {
            flex: 0 0 20%;
            min-width: 12rem;
            max-width: 15rem;
        }
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .sidebar-button {
            user-select: none;
            margin-bottom: 0.5rem;
        }
        .sidebar-button input[type="radio"] {
            position: absolute;
            opacity: 0;
        }
        .sidebar-button .checkbox {
            width: 100%;
            height: 2.5rem;
            padding: 0.75rem;
            box-sizing: border-box;
            margin-bottom: 0.5rem;
        }
        .yellow-box {
            width: 100%;
            height: auto;
            padding: 0.75rem;
            margin-top: -3rem;
            margin-bottom: 3rem;
        }
        .yellow-box button.m3-button {
            margin-top: auto;
            align-self: flex-end;
        }

        @media (max-width: 768px) {
            .layout {
                flex-direction: column;
            }
            .sidebar {
                flex: none;
                width: 100%;
            }
            .main-content {
                flex-direction: column;
            }
        }
    </style>
</head>

