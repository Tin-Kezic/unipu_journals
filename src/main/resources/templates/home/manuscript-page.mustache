<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{currentSection}}</title>
    <link href="/util.css" rel="stylesheet"/>
</head>

<body>
{{>util/header}}

<section>
    <div style="display: flex; justify-content: space-between; align-items: center; margin: 2rem 1.5rem 1rem 1rem;">
        <h1 style="font-size: 1.5rem; font-weight: 400; margin: 2rem 0 1rem 1rem;">
            {{currentSection}}
        </h1>
        {{#isEicOrSuperior}}
            <div style="display: flex; flex-direction: column; gap: 0.3rem; margin-top: 0.5rem;">
                <a href="/publication/{{publicationId}}/section/{{sectionId}}/manage-section-editor-on-section" class="m3-button yellow-button" style="padding: 0.7rem 1.3rem; font-size: 1rem; border-radius: 0.5rem; box-shadow: none; text-decoration: none;">Manage section editors</a>
            </div>
        {{/isEicOrSuperior}}
    </div>
</section>

<div class="layout" style="display: flex; align-items: flex-start;">
    <aside style="display: flex; flex-direction: column; gap: 0.5rem; margin-left: 1rem;">
        {{#sectionsSidebar}}
            <a data-type="sidebar-button" data-id="{{id}}" href="/publication/{{publicationId}}/section/{{id}}" style="text-decoration: none; color: inherit;">
                <label class="sidebar-button">
                    <span class="sidebar-button-title">{{title}}</span>
                </label>
            </a>
        {{/sectionsSidebar}}
    </aside>

    <section class="main-content" style="
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        gap: 1rem;
        margin: 0 1.5rem 1rem 1.5rem;
        min-width: 0;
        overflow: hidden;
    ">
        <article class="yellow-box no-hover" style="width: auto; height: auto; cursor: default; max-width: 100%; border-color: var(--purple);">
            <p id="description" class="yellow-box-text">{{{description}}}</p>
            {{#isEicOrSuperior}}
                <footer>
                    <footer style="display: flex; justify-content: flex-end;">
                        <button id="edit-description-button" class="m3-button purple-button" style="box-shadow: none; margin-top: 1.5rem; padding-inline: 2rem; padding-block: 0.4rem; border-radius: 7px; font-size: 1.5rem;">Edit</button>
                    </footer>
                </footer>
            {{/isEicOrSuperior}}
        </article>
        {{#manuscripts}}
            <article data-id="{{id}}" onclick="window.location.href='/publication/{{publicationId}}/section/{{sectionId}}/manuscript/{{id}}'" class="yellow-box" style="width: auto; height: auto; max-width: 100%;">
                <p class="yellow-box-text">{{title}}</p>

                <div class="authors" style="display: flex; flex-wrap: wrap;">{{#authors}} <button>{{.}}</button> {{/authors}}</div>

                <p style="font-weight: 100; font-size: 0.8rem; margin-bottom: 0.5rem; margin-top: 0.2rem;">{{publicationDate}}</p>
                <p style="font-weight: 100; font-size: 0.8rem">{{description}}</p>
            {{#isSectionEditorOrSuperior}}
                <footer class="yellow-box-buttons" style="margin-left: 1rem; margin-top: 0.5rem; margin-bottom: 0;">
                        {{#isAdmin}}
                            <button class="m3-button outline-button" data-type="hide-button" data-id="{{id}}" data-title="{{title}}" style="width: auto; border-radius: 10rem; box-shadow: none;">Hide</button>
                        {{/isAdmin}}
                        <button onclick="event.stopPropagation()" class="m3-button purple-button" data-type="archive-button" data-id="{{id}}" data-title="{{title}}" style="box-shadow: none; width: auto; border-radius: 10rem; padding-block: 0.523rem; text-wrap: nowrap;">Move to archive</button>
                </footer>
            {{/isSectionEditorOrSuperior}}
            </article>
        {{/manuscripts}}
    </section>
</div>

{{#isEicOrSuperior}}
    <dialog id="edit-description-dialog" closedby="any" style="width: 90vw; height: 90vh;">
        <form id="edit-description-dialog-form">
            <div class="text-field">
                <label>description</label>
                <textarea name="description" style="width: 100%; height:100%; resize: vertical; field-sizing: content; min-height: 70vh; min-width: 88vw; padding: 1rem 2rem; font-size: 1rem;"></textarea>
            </div>
            <div style="display: flex; justify-content: space-between">
                <button id="edit-description-dialog-negative" class="m3-button outline-button" type="button">Cancel</button>
                <div style="display: flex; justify-content: flex-end">
                    <button class="m3-button purple-button">Edit</button>
                </div>
            </div>
        </form>
    </dialog>
    <script>
        const editDescriptionDialog = document.getElementById('edit-description-dialog');
        const description = document.getElementById('description');
        const textarea = document.querySelector('textarea[name=description]');
        document.getElementById('edit-description-button').addEventListener('click', () => {
            textarea.value = description.innerHTML;
            editDescriptionDialog.showModal();
        });
        document.getElementById('edit-description-dialog-negative').addEventListener('click', () => editDescriptionDialog.close());
        document.getElementById('edit-description-dialog-form').addEventListener('submit', async (event) => {
            event.preventDefault();
            const response = await fetch(`/api/publication/{{publicationId}}/section/{{sectionId}}/update-description?description=${encodeURIComponent(textarea.value)}`, { method: 'PUT' });
            if(!response.ok) { alert('failed to add description'); return; }
            description.innerHTML = textarea.value;
            editDescriptionDialog.close();
        });
    </script>

    <dialog id="hide-manuscript-dialog" closedby="any">
        <p id="hide-manuscript-dialog-message"></p>
        <br>
        <div style="display: flex; justify-content: space-between">
            <button id="hide-manuscript-dialog-negative" class="m3-button outline-button">Cancel</button>
            <button id="hide-manuscript-dialog-positive" class="m3-button red-button" style="margin-left: 1rem;">Hide</button>
        </div>
    </dialog>
    <script>
        let currentId = null;
        const hideManuscriptDialog = document.getElementById('hide-manuscript-dialog');
        const hideManuscriptDialogMessage = document.getElementById('hide-manuscript-dialog-message');
        document.querySelectorAll('button[data-type="hide-button"]').forEach(button => {
            button.addEventListener('click', () => {
                hideManuscriptDialogMessage.innerHTML = `Hide <b>${button.dataset.title}</b>?`;
                currentId = button.dataset.id;
                hideManuscriptDialog.showModal();
            });
        });
        document.getElementById('hide-manuscript-dialog-negative').addEventListener('click', () => hideManuscriptDialog.close());
        document.getElementById('hide-manuscript-dialog-positive').addEventListener('click', async () => {
            const response = await fetch(`/api/publication/{{publicationId}}/section/{{sectionId}}/manuscript/${currentId}/update-hidden?isHidden=true`, { method: 'PUT' });
            if(!response.ok) { alert('failed to hide Manuscript'); return; }
            document.querySelector(`article[data-id="${currentId}"]`).remove();
            hideManuscriptDialog.close();
        });
    </script>

    <dialog id="archive-manuscript-dialog" closedby="any">
        <p id="archive-manuscript-dialog-message"></p>
        <br>
        <div style="display: flex; justify-content: space-between">
            <button id="archive-manuscript-dialog-negative" class="m3-button outline-button">Cancel</button>
            <button id="archive-manuscript-dialog-positive" class="m3-button red-button" style="margin-left: 1rem;">Archive</button>
        </div>
    </dialog>
    <script>
        const archiveManuscriptDialog = document.getElementById('archive-manuscript-dialog');
        const archiveManuscriptDialogMessage = document.getElementById('archive-manuscript-dialog-message');
        document.querySelectorAll('button[data-type="archive-button"]').forEach(button => {
            button.addEventListener('click', () => {
                archiveManuscriptDialogMessage.innerHTML = `Archive <b>${button.dataset.title}</b>?`;
                currentId = button.dataset.id;
                archiveManuscriptDialog.showModal();
            });
        });
        document.getElementById('archive-manuscript-dialog-negative').addEventListener('click', () => archiveManuscriptDialog.close());
        document.getElementById('archive-manuscript-dialog-positive').addEventListener('click', async () => {
            const response = await fetch(`/api/publication/{{publicationId}}/section/{{sectionId}}/manuscript/${currentId}/update-archived?isArchived=true`, { method: 'PUT' });
            if(!response.ok) { alert('failed to archive Manuscript'); return; }
            document.querySelector(`article[data-id="${currentId}"]`).remove();
            archiveManuscriptDialog.close();
        });
    </script>
{{/isEicOrSuperior}}
</body>
<script>
    const title = document
        .querySelector('a[data-type="sidebar-button"][data-id="{{sectionId}}"]')
        .querySelector('.sidebar-button-title');
    title.style.background = 'var(--purple)';
    title.style.color = 'white';
</script>
<style>
    .yellow-box-buttons {
        display: flex;
        gap: 0.5rem;
        margin-left: 1rem;
        margin-top: 0.5rem;
    }
    .yellow-box-buttons button {
        font-size: clamp(0.7rem, 1.2vw, 0.9rem);
        padding: clamp(0.3rem, 0.8vw, 0.5rem) clamp(0.6rem, 1.5vw, 1rem);
        border-radius: clamp(8px, 2vw, 10rem);
    }
    .text-field input {
        background-color: white;
    }
    @media (max-width: 768px) {
        .yellow-box {
            padding: 1rem !important;
            margin: 0 !important;
        }
        .yellow-box-text {
            font-size: 0.9rem !important;
        }
        .yellow-box-buttons {
            margin-left: 0.5rem;
            gap: 0.4rem;
        }
        .yellow-box-buttons button {
            font-size: clamp(0.6rem, 1.8vw, 0.8rem) !important;
            padding: clamp(0.25rem, 0.6vw, 0.4rem) clamp(0.5rem, 1.2vw, 0.8rem) !important;
        }
    }
    @media (max-width: 480px) {
        .yellow-box {
            padding: 0.8rem !important;
        }
        .yellow-box-text {
            font-size: 0.8rem !important;
        }
        h1 {
            font-size: 1.2rem !important;
            margin: 1rem 0 0.5rem 1rem !important;
        }
        .authors {
            flex-direction: column;
        }
        .yellow-box-buttons {
            display: flex;
            flex-direction: column !important;
            gap: 0.3rem;
            margin-left: 0 !important;
            margin-top: 0.3rem;
        }
        .yellow-box-buttons button {
            font-size: clamp(0.5rem, 2.5vw, 0.7rem) !important;
            padding: clamp(0.2rem, 0.5vw, 0.3rem) clamp(0.4rem, 1vw, 0.6rem) !important;
            width: 100% !important;
        }
    }
</style>
</html>