<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="/util.css" rel="stylesheet"/>
    <script src="/htmx.min.js"></script>
    <title>Section Page</title>
</head>

<script>
    function showOverlayAndDialog() {
        document.querySelector('.overlay').classList.add('active');
        document.querySelector('.dialog').classList.add('active');
    }

    function hideOverlayAndDialog() {
        document.querySelector('.overlay').classList.remove('active');
        document.querySelector('.dialog').classList.remove('active');
    }
</script>

<body>
{{>util/header}}

<main>
    <div style="display: flex; justify-content: space-between; align-items: center; margin: 2rem 1.5rem 1rem 1.5rem;">
        <h1 style="font-size: 1.5rem; font-weight: 400; user-select: none;">
            publications
        </h1>
        <button class="m3-button purple-button" style="padding: 0.7rem 1.3rem; font-size: 1rem; border-radius: 0.5rem; box-shadow: none;" onclick="showOverlayAndDialog()">+ Add section</button>
    </div>

    <div style="display: flex; align-items: flex-start;">
        <aside style="display: flex; flex-direction: column; gap: 0.5rem; margin-left: 1rem;">
            {{#publications-sidebar}}
                <a href="/publication/{{id}}" style="text-decoration: none; color: inherit;">
                    <label class="sidebar-button">
                        <span class="checkbox">{{title}}</span>
                    </label>
                </a>
            {{/publications-sidebar}}
        </aside>

        <section style="
            flex: 1;
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            gap: 1rem;
            margin: 0 1.5rem 1rem 1.5rem;
          ">
            {{#sections}}
                <article>
                    <a href="/publication/{{publicationId}}/section/{{id}}" style="text-decoration: none; color: inherit;">
                        <div class="yellow-box">
                            <p class="yellow-box-text">{{title}}</p>
                            <div class="yellow-box-buttons">
                                <button class="m3-button purple-button" style="font-size: 0.8rem; width: 3.8rem; box-shadow: none;">Hide</button>
                                <button class="m3-button red-button" style="color: black; background-color: var(--yellow); font-size: 0.8rem; width: 3.8rem;">Edit</button>
                            </div>
                        </div>
                    </a>
                </article>
            {{/sections}}
        </section>
    </div>
</main>

<div class="overlay">
    <div class="dialog" style="padding: 1.5rem 3rem;">
        <p>Section name:</p>
        <div class="text-field">
            <label for="section"></label>
            <input type="text">
        </div>
        <div style="display: flex; justify-content: space-between">
            <button class="m3-button outline-button" onclick="hideOverlayAndDialog()">Cancel</button>
            <div style="display: flex; justify-content: flex-end">
                <button class="m3-button remove-button" style="box-shadow: none; padding-inline: 1.8rem; color: black; background-color: var(--yellow);">Add</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>