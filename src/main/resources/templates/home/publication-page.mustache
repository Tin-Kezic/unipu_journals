                    break;
                case 'MINOR_MAJOR':
                    responsePublications.forEach(containerDTO => {

                    });
                    break;
                case 'REJECTED':
                    responsePublications.forEach(containerDTO => {

                    });
                    break;
                case 'ARCHIVED':
                    responsePublications.forEach(containerDTO => {

                    });
                    break;
                case 'HIDDEN':
                    responsePublications.forEach(containerDTO => {

