</div>
<main style="display: flex; flex: 1; overflow: hidden;">
    <div style="margin-left: 1rem; height: 100%;">
        <div style="width: 15rem;">
            {{#isAdmin}}
                <button
                    id="add-publication"
                    onclick="openUpsertDialog('Add publication', 'POST', '/api/publication?title=', `/api/publication?${params()}`, 'publications-sidebar')"
                    class="m3-button purple-button"
                    style="padding: 0.7rem 1.3rem; font-size: 1rem; border-radius: 0.5rem; box-shadow: none; width: 100%; margin-bottom: 0.5rem;"
                >+ Add publication</button>
            {{/isAdmin}}
            {{^isAdmin}}Publications{{/isAdmin}}
        </div>
        <aside id="publications-sidebar" style="display: flex; flex-direction: column; gap: 0.5rem; overflow-y: auto; overflow-x: hidden; height: 100%; padding-bottom: 4rem;">
            {{#publications}}
                <sidebar-button id="publication-{{id}}" type="publication" title="{{title}}" can-edit="{{canEdit}}" can-hide="{{canHide}}"></sidebar-button>
            {{/publications}}
        </aside>
    </div>
    <div style="margin-left: 1rem; height: 100%;">
        <div style="width: 15rem;">
            <button
                id="add-section"
                onclick="openUpsertDialog('Add section', 'POST', `/api/publication/${currentPublicationId}/section?title=`, `/api/publication/${currentPublicationId}/sections?${params()}`, 'sections-sidebar')"
                class="m3-button purple-button"
                style="padding: 0.7rem 1.3rem; font-size: 1rem; border-radius: 0.5rem; box-shadow: none; width: 15rem; margin-bottom: 0.5rem;"
                {{^isEicOnPublicationOrAdmin}}hidden{{/isEicOnPublicationOrAdmin}}
            >+ Add Section</button>
            <legend id="sections-legend" {{#isEicOnPublicationOrAdmin}}hidden{{/isEicOnPublicationOrAdmin}}>Sections</legend>
        </div>
        <aside id="sections-sidebar" style="display: flex; flex-direction: column; gap: 0.5rem; overflow-y: auto; overflow-x: hidden; height: 100%; padding-bottom: 4rem;">
        {{#sections}}
            <sidebar-button id="section-{{id}}" type="section" title="{{title}}" description="{{description}}" font-size="small" can-edit="{{canEdit}}" can-hide="{{canHide}}"></sidebar-button>
        {{/sections}}
    </aside>
    </div>
    <script>
        let currentPublicationId = {{selectedPublicationId}};
        let currentSectionId = {{selectedSectionId}};
        document.getElementById(`publication-${currentPublicationId}`).querySelector('input').click();
        document.getElementById(`section-${currentSectionId}`).querySelector('input').click();
        document.addEventListener('sidebar-button-click', async (event) => {
            const { id, title, isOverseeing } = event.detail;
            const idValue = id.replace(/^.*-/, '');
            const type = id.replace(/-.*$/, '');
            type === 'publication' ? currentPublicationId = idValue : currentSectionId = idValue;
            const url = `/api/publication/${currentPublicationId}/section${type === 'section' ? `/${currentSectionId}/manuscripts` : `s?${params()}`}`;
            const response = await fetch(url, { method: 'GET' });
            if(!response.ok) { alert(await response.text()); return; }
            if(type === 'section') {
                document.getElementById('description').innerHTML = document.getElementById(id).getAttribute('description');
            }
            const items = await response.json();
            const container = type === 'publication' ? 'sections-sidebar': 'manuscripts-container';
            const clickFirst = type === 'publication';
            renderItems(items, container, clickFirst);
            if(type === 'publication') {
                if(isOverseeing) {
                    document.getElementById('add-section').hidden = false;
                    document.getElementById('sections-legend').hidden = true;
                } else {
                    document.getElementById('add-section').hidden = true;
                    document.getElementById('sections-legend').hidden = false;
                }
            }
        });
        document.addEventListener('sidebar-button-option-click', async (event) => {
            const { id, title, canEdit, canHide } = event.detail;
            const idValue = id.replace(/^.*-/, '');
            openOptionsDialog(title, [
                canEdit && {name: 'Rename', onClick: () => {
                    if(id.includes('publication')) 
                        openUpsertDialog(`Rename ${title}`, 'PUT', `/api/publication/${idValue}?title=`, `/api/publication?${params()}`, 'publications-sidebar');
                    else if(id.includes('section'))
                        openUpsertDialog(`Rename ${title}`, 'PUT', `/api/publication/${currentPublicationId}/section/${idValue}?title=`, `/api/publication/${currentPublicationId}/sections?${params()}`, 'sections-sidebar');
                    else console.log('invalid id passed');
                }},
                canHide && {name: 'Hide', onClick: () => {
                    if(id.includes('publication')) 
                        openBooleanDialog(`Hide ${title}`, 'DELETE', `/api/publication/${id}`, `/api/publication?${params()}`, 'publications-sidebar');
                    else if(id.includes('section'))
                        openBooleanDialog(`Hide ${title}`, 'DELETE', `/api/publication/${currentPublicationId}/section/${id}`, `/api/publication/${currentPublicationId}/sections?${params()}`, 'sections-sidebar');
                    else console.log('invalid id passed');
                }}
            ].filter(Boolean))
        });
    </script>

    <section style="
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        gap: 1rem;
        margin: 0 1.5rem 1rem 1.5rem;
        min-width: 0;
        overflow: hidden;
    ">
        <div>
            <legend id="sections-legend">Manuscripts</legend>
            <article class="container no-hover" style="width: auto; height: auto; cursor: default; max-width: 100%; border-color: var(--purple);">
                <p id="description" class="container-text">{{{description}}}</p>
                {{#isEicOnPublicationOrAdmin}}
                    <footer style="display: flex; justify-content: flex-end;">
                        <button id="edit-description-button" class="m3-button purple-button" style="box-shadow: none; margin-top: 1.5rem; padding-inline: 2rem; padding-block: 0.4rem; border-radius: 7px; font-size: 1.5rem;">Edit</button>
                    </footer>
                {{/isEicOnPublicationOrAdmin}}
            </article>
        </div>
        <div id="manuscripts-container">
            {{#manuscripts}}
                <article data-id="{{id}}" onclick="window.location = '/manuscript/{{id}}'" class="container" style="width: auto; height: auto; max-width: 100%;">
                    <p class="container-text">{{title}}</p>

                    <div class="authors" style="display: flex; flex-wrap: wrap;">{{#authors}} <button>{{.}}</button> {{/authors}}</div>

                    <p style="font-weight: 100; font-size: 0.8rem; margin-bottom: 0.5rem; margin-top: 0.2rem;">{{publicationDate}}</p>
                    <p style="font-weight: 100; font-size: 0.8rem">{{description}}</p>
                    {{#isSectionEditorOrSuperior}}
                        <footer class="container-buttons" style="margin-top: 0.5rem; margin-bottom: 0;">
                            {{#isAdmin}}
                                <button onclick="event.stopPropagation()" class="m3-button outline-button" data-type="hide-button" data-id="{{id}}" data-title="{{title}}" style="width: auto; border-radius: 10rem; box-shadow: none; padding-inline: 1.7rem;">Hide</button>
                            {{/isAdmin}}
                            <button onclick="event.stopPropagation()" class="m3-button purple-button" data-type="archive-button" data-id="{{id}}" data-title="{{title}}" style="box-shadow: none; width: auto; border-radius: 10rem; padding-block: 0.523rem; text-wrap: nowrap;">Move to archive</button>
                        </footer>
                    {{/isSectionEditorOrSuperior}}
                </article>
            {{/manuscripts}}
        </div>
    </section>
</main>

<dialog id="hide-publication-dialog" closedby="any">
    <p id="hide-publication-dialog-message"></p>
    <br>
    <div style="display: flex; justify-content: space-between">
        <button id="hide-publication-dialog-negative" class="m3-button outline-button">Cancel</button>
        <button id="hide-publication-dialog-positive" class="m3-button red-button" style="margin-left: 1rem; padding-inline: 1.7rem;">Hide</button>
    </div>
</dialog>
<script>
    const hidePublicationDialog = document.getElementById('hide-publication-dialog');
    const hidePublicationDialogMessage = document.getElementById('hide-publication-dialog-message');
    document.querySelectorAll('button[data-type="hide-button"]').forEach(button => {
        button.addEventListener('click', () => {
            hidePublicationDialogMessage.innerHTML = `Hide <b>${button.dataset.title}</b>?`;
            currentId = button.dataset.id;
            hidePublicationDialog.showModal();
        });
    });
    document.getElementById('hide-publication-dialog-negative').addEventListener('click', () => hidePublicationDialog.close());
    document.getElementById('hide-publication-dialog-positive').addEventListener('click', async () => {
        const response = await fetch(`/api/publication/${currentId}?isHidden=true`, { method: 'PUT' });
        if(!response.ok) { alert(await response.text()); return; }
        document.querySelector(`div[data-id="${currentId}"]`).remove();
        hidePublicationDialog.close();
    });
</script>
</body>
