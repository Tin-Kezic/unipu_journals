                <sidebar-button id="{{id}}" type="publication" title="{{title}}" is-overseeing= "{{canEdit}} || {{canHide}}"></sidebar-button>
            {{/publications}}
        </aside>
    </div>
    <script>
        let currentPublication;
        document.querySelectorAll('input[name="publication"]').forEach(input => input.addEventListener('change', async () => {
            currentPublication = input.value;
            const response = await fetch(`/api/publication/${currentPublication}/sections`, { method: 'GET' });
            if(!response.ok) { alert(await response.text()); return; }
            const sectionsSidebar = document.getElementById('sections-sidebar');
            sectionsSidebar.innerHTML = '';
            const sections = await response.json();
            sections.forEach(section => {
                const newSection = document.createElement('sidebar-button');
                newSection.setAttribute('id', section.id);
                newSection.setAttribute('type', 'section');
                newSection.setAttribute('font-size', 'small');
                newSection.setAttribute('title', section.title);
                newSection.setAttribute('is-overseeing', section.canEdit || section.canHide);
                sectionsSidebar.appendChild(newSection);
            });
        }));
        document.querySelectorAll('svg[data-type="publication-options"]').forEach(svg => svg.addEventListener('click', () => {
            document.getElementById('sections-sidebar').innerHTML = 'ah';
        }));
    </script>
